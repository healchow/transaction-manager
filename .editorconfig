root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.{yml,xml}]
indent_size = 2
ij_xml_continuation_indent_size = 4
max_line_length = 150

[*.md]
trim_trailing_whitespace = false

# Java 代码格式配置，参考 IDEA 的配置导出后的配置
[*.java]
indent_size = 4
max_line_length = 150
tab_width = 4
ij_java_continuation_indent_size = 8

#################### IDEA Java 代码缩进格式 ####################
# 连续变量声明是否对齐
ij_java_align_consecutive_variable_declarations = false
# 是否对齐多行注解参数
ij_java_align_multiline_annotation_parameters = false
# 是否对齐多行数组的初始化表达式
ij_java_align_multiline_array_initializer_expression = false
# 是否对齐多行声明
ij_java_align_multiline_assignment = false
# 是否对齐多行链式方法
ij_java_align_multiline_chained_methods = false
# 是否对齐多行 extends 的类列表
ij_java_align_multiline_extends_list = false
# 是否对齐多行 for 中的参数
ij_java_align_multiline_for = false
# 是否对齐多行方法括号
ij_java_align_multiline_method_parentheses = false
# 是否对齐多行参数
ij_java_align_multiline_parameters = false
# 是否对齐多行调用者的参数
ij_java_align_multiline_parameters_in_calls = false
# 是否对齐多行括号表达式
ij_java_align_multiline_parenthesized_expression = false
# 是否对齐多行三元操作
ij_java_align_multiline_ternary_operation = false
# 是否对齐多行文档块
ij_java_align_multiline_text_blocks = false
# 是否对齐多行 throw 列表
ij_java_align_multiline_throws_list = false
# 是否对齐 throw 关键字
ij_java_align_throws_keyword = false
# 是否对齐后续简单方法
ij_java_align_subsequent_simple_methods = false

#################### IDEA Java doc 格式设置 ####################
# 是否开启doc注释格式化
ij_java_doc_enable_formatting = true
# 是否对齐doc参数注释
ij_java_doc_align_param_comments = false
# 是否对齐异常注释
ij_java_doc_align_exception_comments = false
# 是否保留空行
ij_java_doc_keep_empty_lines = true
# 是否保留无效的 tag
ij_java_doc_keep_invalid_tags = true
# 是否保留空参注释
ij_java_doc_keep_empty_parameter_tag = false
# 是否保留空返回注释
ij_java_doc_keep_empty_return_tag = false
# 是否保留空抛错注释
ij_java_doc_keep_empty_throws_tag = false
# 是否将空行加入<p>标签
# ij_java_doc_add_p_tag_on_empty_lines = true
# 是否在 return 后加入空行
ij_java_doc_add_blank_line_after_return = false
# 是否在参数说明后面加入空行
ij_java_doc_add_blank_line_after_param_comments = false
# 是否在方法说明后加入空行
ij_java_doc_add_blank_line_after_description = true
# 是否使用@throw而不是@exception
ij_java_doc_use_throws_not_exception_tag = true
# 一行注释超过长度是否自动换行
ij_java_doc_do_not_wrap_if_one_line = true
# 是否在文档前启用*
ij_java_doc_enable_leading_asterisks = true
# 文档是否继续缩进
ij_java_doc_indent_on_continuation = true
# 参数的描述是否新开一行
ij_java_doc_param_description_on_new_line = false
# 是否保留换行符
ij_java_doc_preserve_line_breaks = true

#################### IDEA Java Import格式设置 ####################
ij_java_class_count_to_use_import_on_demand = 99
ij_java_names_count_to_use_import_on_demand = 99

#################### IDEA Java 空白行格式设置 ####################
ij_java_keep_blank_lines_in_declarations = 1
ij_java_keep_blank_lines_before_right_brace = 1
ij_java_keep_blank_lines_between_package_declaration_and_header = 1
ij_java_keep_blank_lines_in_code = 1
